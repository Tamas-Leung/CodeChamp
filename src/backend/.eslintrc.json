{
  "root": true,
  "env": {
    "es2021": true,
    "mocha": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "files": ["*.js", "*.ts"],
      "rules": {
        "no-underscore-dangle": "off"
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "error",
    "import/extensions": [
      "error",
      {
        "js": "ignorePackages"
      }
    ]
  }
}
